{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "..",
    "paths": {
      "@/*": ["./server/*"],
      "@prisma/*": ["./prisma/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["./**/*"],
  "references": [
    { "path": "../server" }
  ]
} 